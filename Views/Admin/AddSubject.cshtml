@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section PageTitle{
<div class="page-title">
    <div>
        <h1><i class="icon-file-alt"></i> Add Subjects </h1>
    </div>
</div>
}
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3>Subject Form</h3>
            </div>
            <div class="box-content">
                <form action="AddSubject" method="post" class="form-horizontal">
                    
                        <div class="row-fluid">
                            <div class="span5 offset1">
                                <div class="control-group">
                                    <label >Name</label>
                                    <div >
                                        <input class="input-xlarge" required type="text" name="Name" >
                                    </div>
                                </div>
                            </div>
                            <div class="span5">
                                <div class="control-group">
                                    <label >Code</label>
                                    <div >
                                        <input class="input-xlarge" required type="text" name="Code">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span3 offset1">
                                <div class=" control-group">
                                    <input id="CreateAndNew" type="submit" name="CreateAndNew" value="Create and New" class="btn btn-success" />
                                </div>
                            </div>
                            <div class="span2 pull-right">
                                <div class="control-group">
                                    <input id="Create" type="submit" name="Create" value="Create" class="btn btn-success">
                                </div>
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>
