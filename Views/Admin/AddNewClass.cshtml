
@{
    ViewBag.Title = "AddNewClass";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@{
    List<SelectListItem> list = ViewBag.gradeList;
}

@section PageTitle{
<div class="page-title">
    <div>
        <h1>Select A Grade</h1>
    </div>
</div>
    }
<div class="box">
    <div class="box-title">
        <h3>Select a Grade</h3>
    </div>
    <div class="box-content">
        <form method="post" action="/Admin/AddNewClass2">
            <div class="row-fluid">
                <div class="span4 offset1">
                    @Html.DropDownList("gradeName", list, "-Select Grade-", new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row-fluid">
                <div class="span2 pull-right">
                    <input type="submit" value="Select Grade" class="btn btn-primary" />
                </div>                
            </div>
        </form>
    </div>
</div>

