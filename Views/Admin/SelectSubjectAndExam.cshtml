@model SchoolManagementSystem.Models.SubjectExamViewModel
@{
    ViewBag.Title = "SelectSubjectAndExam";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-title">
    <div>
        <h1>Enter Marks</h1>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="box box-blue">
            <div class="box-title">
                <h3><i class="icon-reorder"></i>Select Subject and Exam</h3>
            </div>
            <div class="box-content">
                <form action="/Admin/SelectSubjectAndExam1">
                    <div class="row">
                        <div class="col-md-3">
                            <label>Subjects</label>
                            <div class="controls">
                                <select name="Subjects"  >
                                    @{
                                        if (Model != null)
                                        {
                                            foreach (var item in Model.subjects)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label>Exams</label>
                            <div class="controls">
                                <select name="Exams"  >
                                    @{
                                        if (Model != null)
                                        {
                                            foreach (var item in Model.exams)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row row-fluid">
                        <div class="col-md-3 pull-down span3">
                            <br />
                            <input type="submit" value="Enter Marks" class="btn btn-success" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>