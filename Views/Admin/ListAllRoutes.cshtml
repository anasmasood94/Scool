@model List<SchoolManagementSystem.Models.Route>
@{
    ViewBag.Title = "ListAllRoutes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section Scripts{
    <link href="~/Content/assets/data-tables/DT_bootstrap.css" rel="stylesheet" />
    <script src="~/Content/assets/data-tables/jquery.dataTables.js"></script>
    <script src="~/Content/assets/data-tables/DT_bootstrap.js"></script>

    <script src="~/Scripts/jQuery.print.js"></script>
    <script src="~/Scripts/Custom/PrintExample.js"></script>
}
@section PageTitle{
    <div class="page-title">
        <h1>Routes</h1>
    </div>
}
<div class="box">
    <div class="box-title">
        <h3>List of Routes</h3>
    </div>
    <div class="box-content"> 
    <table class="table table-advance" id="table1" >
        <thead class="table-head">
            <tr>
                <th>Route Name</th>
                <th>Start Point</th>
                <th>End Point</th>
                <th class="actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].StartPoint</td>
                    <td>@Model[i].EndPoint</td>
                    <td class="actions">
                        <a class="btn btn-success glyphicon glyphicon-ok-circle" href=@("/Admin/ViewAllBusesInRoute/" + Model[i].Id)></a>
                        <a class="btn btn-info  glyphicon glyphicon glyphicon-pencil bcc" href=@("/Admin/EditRoute/"+Model[i].Id)></a>
                        <a data-confirm="Are you sure?" class="btn btn-danger glyphicon glyphicon glyphicon-trash" rel="nofollow" data-method="delete" href=@("/Admin/DeleteRoute/" + Model[i].Id)></a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
        </div>
</div>

