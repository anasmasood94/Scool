
@{
    ViewBag.Title = "AddNewGrade";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section PageTitle{
    <div class="page-title">
        <h1>Add Grade</h1>
    </div>
}
<div class="box">
    <div class="box-title">
        <h3>Grade Information</h3>
    </div>
    <div class="box-content">
        <form id="new_grade" action="/Admin/AddNewGrade2" accept-charset="UTF-8" method="post">
            <div class="row-fluid">
                <div class="span5">
                    <label>Grade Name</label>
                    <div class="controls">
                        <input class="form-control input-xlarge" required="required" autofocus="autofocus" type="text" name="GradeName" id="gradeName" />
                    </div>
                </div>
                <div class="span5">
                    <label>Max. No. of Students per class</label>
                    <div class="controls">
                        <input class="input-xlarge form-control"  required="required" type="text" name="GradeMaxStudent" id="gradeMaxStudent" />
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span3 pull-right">
                    <input type="submit" name="commit" value="Create" class="btn btn-block btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>
