@model SchoolManagementSystem.Models.Employee
@{
    ViewBag.Title = "EditUserPassword";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script>
    $(document).ready(function () {
        $('#btnSubmit').click(function (event) {
            var pass = $('#Password').val();
            var conf = $('#ConfirmPassword').val();
            if (pass != conf) {
                $('#PasswordError').show();
                event.preventDefault();
            }
        });
        $('#ConfirmPassword').focusout(function (event) {
            var pass = $('#Password').val();
            var conf = $('#ConfirmPassword').val();
            if (pass != conf) {
                $('#PasswordError').show();
                event.preventDefault();
            }
        });
        $('#ConfirmPassword').focusin(function () {
            $('#PasswordError').hide();
        });
    });
</script>

<div class="page-title">
    <div>
        <h2>Edit User Password</h2>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="box">
                <div class="box-title">
                    <h3><i class="icon-reorder"></i>Edit User Password</h3>
                </div>
                <div class="box-content">
                    <form class="form-horizontal" action="EditUserPassword" method="post">
                        <div id="tab1-2" class="tab-pane">
                        </div>


                        <div class="control-group">
                            <label class="control-label">Password</label>
                            <div class="controls">
                                <input type="password" class="span5" id="Password" name="Password">
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Confirm Password</label>
                            <div class="controls">
                                <input type="password" class="span5" id="ConfirmPassword">
                            </div>
                        </div>

                        <div class="form-actions pull-right">
                            <input id="btnSubmit" type="submit" name="commit" value="Update Password" class="btn btn-success">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


