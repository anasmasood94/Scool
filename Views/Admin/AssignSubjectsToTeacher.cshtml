@model SchoolManagementSystem.Models.ClassSubjectTeacher

@{
    ViewBag.Title = "AssignSubjectsToTeacher";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    //List<SelectListItem> list1 = (List<SelectListItem>)Session["TeachersSelectList"];
    List<SelectListItem> list1 = ViewBag.TeachersSelectList;
    List<SelectListItem> list2 = ViewBag.SubjectsSelectList;

}
@section Scripts{
    <link href="~/Content/DataTables/datatables.min.css" rel="stylesheet" />
    <script src="~/Content/DataTables/datatables.min.js"></script>
}
@section PageTitle{
    <div class="page-title">
        <h1>Assign Teachers</h1>
    </div>
}
<div class="box">
    <div class="box-title">
        <h3>Select Teachers</h3>
    </div>
    <div class="box-content">
        <form action="/Admin/AssignSubjectsToTeacher2" accept-charset="UTF-8" method="post">
            <input type="hidden" name="ClassId" value=@ViewBag.ClassId />
            <table class="table table-advance">
                <thead>
                    <tr role="row">
                        <th class="sorting_disabled" role="columnheader">
                            <input type="checkbox" id="Boss-Checkbox" />
                        </th>
                        <th class="sorting_disabled" role="columnheader">Subject Name</th>
                        <th class="sorting_disabled" role="columnheader">Teacher</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < list2.Count; i++)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="flags[0][check]" id="bridge_" class="checkbox1" checked="checked" />
                            </td>
                            <td>
                                <input type="text" name="Subject" id="flags_0_subject_id" value=@list2[i].Text readonly />
                                <input type="hidden" name=@("[" + i + "].SubjectId") value="@list2[i].Value " />
                            </td>

                            <td>
                                @Html.DropDownList("[" + i + "].TeacherId", list1, "-Select Teacher-", new { @class = "form-control", id = "teachers" })
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
            <div class="row-fluid">
                <div class="span2 pull-right">
                    <input type="submit" name="commit" value="Assign Subject" data-confirm="Are you sure?" class="btn btn-success" />
                </div> 
                <div class="span2">
                    <a href="" class=" btn btn-success">Back</a> 
                </div>
            </div>
        </form>
    </div>
</div>
