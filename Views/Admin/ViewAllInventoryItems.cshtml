@model List<SchoolManagementSystem.Models.InventoryOrder>
@{
    ViewBag.Title = "ViewAllInventoryItems";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script>
    $('#example thead th').each(function (i, v) {
        // var title = $('#example tfoot th').eq( $(this).index() ).text();
        var title = $(this).text();
        if (title != "Actions") {
            $(this).html(
            '<input type="text"  class="form-control" style="height:auto" id="exampleInputName2" placeholder="' + title + '">'
            );
        }
        else {
            $(this).html('<div>' + title + '</div>');
        }
    });

    // DataTable
    var table = $('#example').DataTable();

    // Apply the search
    table.columns().eq(0).each(function (colIdx) {
        $('input', table.column(colIdx).header()).on('keyup change', function () {
            table
                .column(colIdx)
                .search(this.value)
                .draw();
        });
    });
</script>
@section Scripts{
<script src="~/Scripts/Custom/PrintExample.js"></script>
<link href="~/Content/assets/data-tables/DT_bootstrap.css" rel="stylesheet" />
<script src="~/Content/assets/data-tables/DT_bootstrap.js"></script>
<script src="~/Content/assets/data-tables/jquery.dataTables.js"></script>
}
@section PageTitle{
    <div class="page-title">
        <h1>Inventory Items</h1>
    </div>
}
<div class="box">
    <div class="box-title">
        <h3></h3>
    </div>
    <div class="box-content">
        <table id="example" class="table table-striped">
            <thead class="table-head"   >
                <tr>
                    <th>Order Date                    
                    </th>
                    <th>Payment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>
                            @order.OrderDate
                        </td>
                        <td>
                            @order.Payment

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
