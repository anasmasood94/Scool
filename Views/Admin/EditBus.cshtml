@model SchoolManagementSystem.Models.Bus
@{
    ViewBag.Title = "EditBus";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<SelectListItem> gradeList = ViewBag.GradeSelectList;
    List<SelectListItem> rootList = ViewBag.RouteSelectList;

}
<script>
    $(document).ready(function () {
        $("#grade").val(@Model.GradeId);
        $("#route").val(@Model.RootId);
    })
</script>
@section PageTitle{
    <div class="page-title">
        <h1>Add New Bus</h1>
    </div>
}
<div class="box">
    <div class="box-title">
        <h3>Edit Bus Information</h3>
    </div>
    <div class="box-content">
        <form action="/Admin/EditBus" method="post">
            <input type="hidden" name="Id" value="@Model.Id" required />
            <div class="row-fluid">
                <div class="span5 offset1">
                    <label>Enter Bus Name</label>
                    <input type="text" class="input" name="Name" value="@Model.Name" readonly />
                    <label>Enter Driver Name</label>
                    <input type="text" class="input" name="DriverName" value="@Model.DriverName" required />
                    <label hidden>Select Grade</label>
                    <div hidden>
                        @Html.DropDownList("GradeId", gradeList, new { @class = "dropdown", id = "grade", required = "required" })
                    </div>
                    <label>Current Number of Students</label>
                    <input type="text" name="CurrentNoOfStudents" value="@Model.CurrentNoOfStudents" readonly>
                </div>
                <div class="span5">
                    <label>Enter Max Student Allowed</label>
                    <input type="text" name="MaxNoOfStudents" value="@Model.MaxNoOfStudents" required>
                    <label>Enter Conducter Name</label>
                    <input type="text" name="ConductorName" value="@Model.ConductorName" required>
                    <label>Select Route</label>
                    @Html.DropDownList("RootId", rootList, new { @class = "dropdown", id = "route", required = "required" })
                </div>
            </div>
            <div class="row-fluid form-actions">
                <div class="span3 pull-right">
                    <input type="submit" value="Save Changes" class="btn btn-success" />
                </div>
            </div>

        </form>
    </div>
</div>