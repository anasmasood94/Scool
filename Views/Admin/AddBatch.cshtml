@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section PageTitle{
    <div class="page-title">
        <div>
            <h1>Add Batch</h1>
        </div>
    </div>
}
<div class="row-fluid">
    <div class="span12">
        <div class="box box-blue">
            <div class="box-title">
                <h3>Batch Form</h3>
            </div>
            <div class="box-content">
                <form action="AddBatch" method="post">
                    <div class="row-fluid">
                        <div class="span5 offset1">
                            <div class="control-group">
                                <label for="subject_name" class="control-label">Add Batch Information</label>
                                <input class="form-control" required type="text" name="Name" id="subject_name">
                            </div>
                        </div>
                        
                    </div>
                    <div class="row-fluid">
                        <div class="span3 pull-right">
                            <input type="submit" name="AddBatch" value="Add Batch" class="btn btn-success" />
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
