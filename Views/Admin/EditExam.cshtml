@model SchoolManagementSystem.Models.Exam
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="page-title">
    <div>
        <h2>Editing Exam</h2>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="box">
                <div class="box-title">
                    <h3><i class="icon-reorder"></i>Edit Exam</h3>
                </div>
                <div class="box-content">
                    <form class="form-horizontal" action="#" method="post">
                        <div id="form-wizard-1" class="form-wizard">
                            <div class="tab-content">
                                <div id="tab1-2" class="tab-pane">
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Name</label>
                                    <div class="controls">
                                        <input type="text" name="Name" class="span5" autofocus required value="@Model.Name">
                                        <input type="hidden" name="Id" value="@Model.Id" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Batch</label>
                                    <div class="controls">
                                        <input type="hidden" class="input-xlarge span5" name="BatchId" value="@Model.BatchId" />
                                        <input type="text" class="input-xlarge span5" name="Batch" value="@Model.Batch.Name" readonly />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Grade</label>
                                    <div class="controls">
                                        <input type="hidden" class="input-xlarge span5" name="GradeId" value="@Model.GradeId"/>
                                        <input type="text" class="input-xlarge span5" name="Grade" value="@Model.Grade.Name"  readonly/>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Start Date</label>
                                    <div class="controls">
                                        <input name="StartDate" type="text" size="16" class="date-picker span5" value="@Model.StartDate">
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">End Date</label>
                                    <div class="controls">
                                        <input name="EndDate" type="text" size="16" class="date-picker span5" value="@Model.EndDate">
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Select Report Type</label>
                                    <div class="controls">
                                        <select tabindex="1" class="input-xlarge span5" name="Type">
                                            <option value="Quaterly">Quaterly</option>
                                            <option value="Semesterly">Semesterly</option>
                                            @*<option value="Category 3">Comments Based</option>*@
                                        </select>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">&nbsp;</label>
                                    <div class="controls">
                                        <input type="submit" class="btn btn-primary span5" value="Continue" />
                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
