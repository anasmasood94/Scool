@model List<SchoolManagementSystem.Models.StudentInvoiceViewModel>
@{
    ViewBag.Title = "ShowAllStudentsFee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<script>


    $(document).ready(function () {

        $('#example thead th').each(function (i, v) {
            // var title = $('#example tfoot th').eq( $(this).index() ).text();
            var title = $(this).text();
            if (title != "Actions") {
                $(this).html(
                '<input type="text" class="form-control" id="exampleInputName2" style="width:70px" placeholder="' + title + '">'
                );
            }
            else {
                $(this).html('<div style="width:120px;">' + title + '</div>');
            }
        });

        // DataTable
        var table = $('#example').DataTable();

        // Apply the search
        table.columns().eq(0).each(function (colIdx) {
            $('input', table.column(colIdx).header()).on('keyup change', function () {
                table
                    .column(colIdx)
                    .search(this.value)
                    .draw();
            });
        });
        $('#print').on('click', function () {
            reverse();
            jQuery("#example").print({
                noPrintSelector: ".actions",
                // Add this on top
                //append: "My Footer<br/>",
                // Add this at bottom
                //prepend: "<br/>jQueryScript.net",
                title: "Al Omam International School"
            });
            reverseBack();

        });
        function reverseBack() {
            $('#example thead th').each(function (i, v) {
                // var title = $('#example tfoot th').eq( $(this).index() ).text();
                var title = $(this).text();
                if (title != "Actions") {
                    $(this).html(
                    '<input type="text"  class="form-control" style="height:auto;width:70px" id="exampleInputName2" placeholder="' + title + ' search">'
                    );
                }
            });
        }
        function reverse() {
            $('#example thead th').each(function (i, v) {
                // var title = $('#example tfoot th').eq( $(this).index() ).text();
                var title = $(this).html();
                var input = $('#exampleInputName2').attr('placeholder');
                if (input != null) {
                    var input = input.replace('search', '');
                }
                //            debugger
                if (title != "Actions") {
                    $(this).html(input);
                }
            });
        }
    });

</script>

@section Scripts{
<link href="~/Content/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Content/DataTables/datatables.min.js"></script>
}

@section PageTitle{
    <div class="page-title">
        <h1>Defaulters</h1>
    </div>
}
<div class="box">
    <div class="box-title">
        <h3> Show All Defaulters</h3>
    </div>
    <div class="box-content">
        <table class="table table-advance" id="example">
            <thead>
                <tr>
                    <th>StudentId</th>
                    <th>StudentName</th>
                    <th>Grade</th>
                    <th>Mob Number</th>
                    <th>Paid</th>
                    <th>Rem Balance</th>
                    <th>Deu Date</th>
                    <th class="actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].StudentId</td>
                        <td>@Model[i].StudentName</td>
                        <td>@Model[i].GradeName</td>
                        <td>@Model[i].MobileNumber</td>
                        <td>@Model[i].Paid</td>
                        <td>@Model[i].RemainingAmount</td>
                        <td>@Model[i].DueDate</td>
                        <td class="actions">
                            <a href="#" class="btn btn-success glyphicon glyphicon-envelope show-tooltip" title="Send Sms" id="Sms"></a>
                            &nbsp;
                            <a href="#" class="btn btn-danger  glyphicon glyphicon-ban-circle show-tooltip"  title="Block Result" id="Ban"></a>
                            &nbsp;
                            <a href="#" class="btn btn-to-danger glyphicon glyphicon-lock show-tooltip" title="block Account" id="Lock"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
