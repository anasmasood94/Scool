@model SchoolManagementSystem.Models.Class

@{
    ViewBag.Title = "AddClassInGrade";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    List<SelectListItem> batchList = ViewBag.batchList;
}
@{
    string gradeName = null;
    if (ViewBag.gradeName != null)
    {
        gradeName = ViewBag.gradeName;
    }
    string gradeId = ViewBag.gradeId;

}

@section PageTitle{
    <div class="page-title">
        <div >
            <h1>Add Class</h1>
        </div>
    </div>
}
<div class="box">
    <div class="box-title">
        <h3>Add Class Information</h3>
    </div>
    <div class="box-content">
        <form class="new_grade" id="new_grade" action="/Admin/AddClassInGrade2" method="post">
            <div class="row-fluid">
                <div class="span5">
                    <label>Grade</label>
                    <div class="controls">
                        <input type="text" value="@(gradeName)" class="input-xlarge form-control" readonly />
                        <input type="hidden" value="@(gradeId)" name="GradeId" />
                    </div>
                </div>
                <div class="span5">
                    <label>Class</label>
                    <div class="controls">
                        <input class="form-control input-xlarge"     required="required" type="text" name=ClassName id="grade_section" />
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span5">
                    <label>Batch</label>
                    <div class="controls">
                        @Html.DropDownList("BatchId", batchList, "-Select Batch-", new { @class = "form-control input-xlarge", id = "teachers" })
                    </div>
                </div>
                <div class="span5">
                    <label>Section</label>
                    <div class="controls">
                        <select class="form-control input-xlarge" required="required" name="Section" id="grade_campus">
                            <option value=""></option>
                            <option value="Boys">Boys</option>
                            <option value="Girls">Girls</option>
                        </select>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="row-fluid">
                <div class="span2 pull-right">
                    <input type="submit" name="commit" value="Create" class="btn btn-block btn-success" />
                </div>
                <div class="span2">
                    <a href="" class="btn btn-success">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
