
@{
    ViewBag.Title = "SelectGradeForFeeBreakDownInGrade";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<SelectListItem> gradeList = ViewBag.gradeList;
}
<script>
    $('document').ready(function () {
        $('#get').click(function () {
            debugger
            var grade = $('#grade').val();
            if(typeof grade =='undefine')
            {
                return false;
            }
            var t = $(this).attr('href') + grade;
            $(this).attr('href',t);
            return true;
        });
    });
</script>
@section PageTitle{
    <div class="page-title">
        <h1>Select Grade For Fee</h1>
    </div>
}
<div class="box">
    <div class="box-title">
        <h3>Grade Informations</h3>
    </div>
    <div class="box-content">
        <div class="row-fluid">
            <div class="container">
                <label>Select Grade</label>
                @Html.DropDownList("GradeList", gradeList, "Select Grade", new { @id = "grade" });
            </div>
            <div class="form-actions">
                <a class="btn btn-primary" id="get" href="ListAllFeeBreakDownInGrade2/">List Fee BreakDowns</a>
            </div>
        </div>
    </div>
</div>