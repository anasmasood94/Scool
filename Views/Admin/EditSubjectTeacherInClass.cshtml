@model SchoolManagementSystem.Models.ClassSubjectTeacher

@{
    ViewBag.Title = "EditSubjectTeacherInClass";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<SelectListItem> list = ViewBag.TeachersSelectList;
}
<script>
    $("document").ready(function () {
        debugger
        var temp = $('#list').val();
        $('#list').val('@Model.TeacherId');
    });
</script>
<div class="container">
    <form action="EditSubjectTeacherInClass" method="post">
        <div class="row-fluid">
            <div class="span5">
                <input type="text" class="text" value="@ViewBag.SubjectName" name="SubjectName" readonly />
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" value="@Model.ClassId" name="ClassId" />
                <input type="hidden" name="SubjectId" value="@Model.SubjectId" />
            </div>
            <div class="span5">
                @Html.DropDownList("TeacherId", list, new { @id = "list" })
            </div>

        </div>
        <div class="row-fluid">
            <input type="submit" class="btn btn-default" value="Update"/>
        </div>

    </form>
</div>
