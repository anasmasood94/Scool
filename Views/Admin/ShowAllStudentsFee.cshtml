@model List<SchoolManagementSystem.Models.StudentInvoiceViewModel>
@{
    ViewBag.Title = "ShowAllStudentsFee";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section Scripts{
    <link href="~/Content/assets/data-tables/DT_bootstrap.css" rel="stylesheet" />
    <script src="~/Content/assets/data-tables/jquery.dataTables.js"></script>
    <script src="~/Content/assets/data-tables/DT_bootstrap.js"></script>

    <script src="~/Scripts/jQuery.print.js"></script>
    <script src="~/Scripts/Custom/PrintExample.js"></script>
}
@section PageTitle{
    <div class="page-title">
        <h1>Student Fee</h1>
    </div>
}
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3>List of Student Fees</h3>
            </div>
            <div class="box-content">
                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>StudentId</th>
                            <th>StudentName</th>
                            <th>Grade</th>
                            <th>Mob Number</th>
                            <th>Paid</th>
                            <th>Rem Balance</th>
                            <th class="actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@Model[i].StudentId</td>
                                <td>@Model[i].StudentName</td>
                                <td>@Model[i].GradeName</td>
                                <td>@Model[i].MobileNumber</td>
                                <td>@Model[i].Paid</td>
                                <td>@Model[i].RemainingAmount</td>
                                <td class="actions">
                                    <a href="#" class="btn btn-success glyphicon glyphicon-ok-circle"></a>
                                    <a href="#" class="glyphicon-edit"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
