@{
    ViewBag.Title = "MarkAttendenceSelectDateClass";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<SelectListItem> clsList = ViewBag.classList;
}
@section Scripts{
<link href="~/Content/assets/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
<script src="~/Content/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
}
@section PageTitle{
<div class="page-title">
    <h1><a></a>Mark Sudent Attendance</h1>
</div>
}

<div class="box">
    <div class="box-title">
        <h3>Select Class and Date</h3>
    </div>
    <div class="box-content">
        <div class="row-fluid">
            <form method="post" action="MarkAttendenceSelectDateClass2">
                <div class="span5 offset1">
                    <div class="controls">
                        <br />
                        @Html.DropDownList("ClassId", clsList, "Select Class", new { @class = "", required = "required" })
                    </div>
                    
                </div>
                <div class="sapn4">
                    <label>Select Date</label>
                    <div class="controls">
                        <div class="input-append date date-picker" data-date="12-02-2012" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                            <input class="date-picker" size="16" type="text" name="Date" required><span class="add-on"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <input type="submit" class="btn btn-primary pull-right" value="Go To attedence" />
                </div>
            </form>

        </div>
    </div>
</div>