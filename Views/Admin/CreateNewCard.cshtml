@model SchoolManagementSystem.Models.Exam
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section PageTitle{
    <div class="page-title">
        <div>
            <h1>Add Exam</h1>
        </div>
    </div>
}
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3>Exam Information</h3>
            </div>
            <div class="box-content">
                <form class="form-horizontal" action="#" method="post">
                    <div id="form-wizard-1" class="form-wizard">
                        <div class="tab-content">
                            <div id="tab1-2" class="tab-pane">
                            </div>
                            <div class="control-group">
                                <label class="control-label">Name</label>
                                <div class="controls">
                                    <input type="text" name="Name" class="span5" autofocus required>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Batch</label>
                                <div class="controls">
                                    <select tabindex="1" class="input-xlarge span5" name="BatchId">
                                        @{
                                            foreach (var x in ViewBag.ListBatch)
                                            {
                                                <option value="@x.Id">@x.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Grade</label>
                                <div class="controls">
                                    <select tabindex="1" class="input-xlarge span5" name="GradeId">
                                        @{
                                            foreach (var x in ViewBag.ListGrade)
                                            {
                                                <option value="@x.Id">@x.Name</option>

                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Start Date</label>
                                <div class="controls">
                                    <input name="StartDate" type="text" size="16" class="date-picker span5">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">End Date</label>
                                <div class="controls">
                                    <input name="EndDate" type="text" size="16" class="date-picker span5">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Select Report Type</label>
                                <div class="controls">
                                    <select tabindex="1" class="input-xlarge span5" name="Type">
                                        <option value="Quaterly">Quaterly</option>
                                        <option value="Semesterly">Semesterly</option>
                                    </select>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">&nbsp;</label>
                                <div class="controls">
                                    <input type="submit" class="btn btn-primary span5" value="Continue" />
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
