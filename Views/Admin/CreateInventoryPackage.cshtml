@{
    ViewBag.Title = "CreatePackage";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<SelectListItem> gList = ViewBag.GradeSelectList;
}

<script>
    $(document).ready(function () {
        f1();
        $("#grade").change(function () {
            f1();
        });
        function f1() {
