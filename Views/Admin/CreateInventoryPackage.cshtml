                                p2.find("#packagePrice").val(0);
                                p2.find("#packagePrice").attr("disabled", true);

                            }
                        });
                        CalPackagePrice();
                    });



                    $(".packagePrice").change(function () {
                        CalPackagePrice();
                    });

                    function CalPackagePrice()
                    {
                        $("#totalPackagePrice").val(0);
