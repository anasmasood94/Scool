                    </div>
                    <div class="btn-group">
                        <a class="btn btn-circle show-tooltip" title="Refresh" href="javascript:void(0)"><i class="fa fa-refresh"></i></a>
                    </div>
                </div>
                <div class="clearfix" style="margin-top:10px"></div>
                <table class="table table-advance" id="example" style="height:inherit">
                    <thead class="table-head">
                        <tr>
                            <th>Emp Id</th>
                            <th>Employee Name</th>
                            <th>Reason</th>
                            <th>Disciption</th>
                            <th>Leave From</th>
                            <th>Leave to</th>
                            <th class="actions">Actions</th>
                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.StudentId</td>
                                <td>@item.StudentName</td>
                                <td>@item.LeaveReason</td>
                                <td>@item.Discription</td>
                                <td>@item.LeaveStart</td>
                                <td>@item.LeaveEnd</td>
                                <td>
                                    <div class=""> @item.StatusDiscription</div>
                                    <div class=""> <span style="background:red; border-radius: 50%; color:white; padding:1%"><i class="glyphicon glyphicon-remove"></i></span></div>

                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
