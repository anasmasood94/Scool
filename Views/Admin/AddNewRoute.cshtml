@{
    ViewBag.Title = "AddNewRoute";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section PageTitle{
    <div class="page-title">
        <h1>Add New Route</h1>
    </div>
}
<div class="box">
    <div class="box-title">
        <h3>Route Information</h3>
    </div>
    <div class="box-content">
        <form action="/Admin/AddNewRoute" method="post">
            <div class="row-fluid">
                <div class="span5 offset1">
                    <label>Enter Route Name</label>
                    <input type="text" name="Name"  required /><br /><br />
                    <label>Enter Start Point</label>
                    <input type="text" name="StartPoint" required />
                </div>
                <div class="span5">
                    <br /><br /><br /><br />
                    <label>Enter End Point</label>
                    <input type="text" name="EndPoint"  required />
                </div>
            </div>
            <div class="row-fluid form-actions">
                <div class="span3 pull-right">
                    <input type="submit" value="Add Route" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>
