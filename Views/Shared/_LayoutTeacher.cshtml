<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>Al Omam International School</title>

    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">

    <link rel="stylesheet" href="~/Content/assets/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/bootstrap/bootstrap-responsive.min.css">
    <link rel="stylesheet" href="~/Content/assets/normalize/normalize.css">

    <link href="~/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/Content/css/flaty.css">
    <link rel="stylesheet" href="~/Content/css/flaty-responsive.css">

    <link rel="shortcut icon" href="~/Content/img/favicon.html">
    <link href="~/Content/AnasSheet1.css" rel="stylesheet" />
    <link href="~/Content/assets/chosen-bootstrap/chosen.min.css" rel="stylesheet" />
    <script src="~/Content/assets/modernizr/modernizr-2.6.2.min.js"></script>
    <script src="~/Content/assets/jquery/jquery-1.10.1.min.js"></script>
    <script>window.jQuery || document.write('<script src="~/Content/assets/jquery/jquery-1.10.1.min.js"><\/script>')</script>
    <script src="~/Content/assets/bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/assets/nicescroll/jquery.nicescroll.min.js"></script>

    <link href="~/Content/glyphicons/glyphicon.css" rel="stylesheet" />

    @RenderSection("Scripts", false)
    <script src="~/Content/js/flaty.js"></script>
</head>


<body>
    <!-- BEGIN Theme Setting -->
    <div id="theme-setting">
        <a href="#"><span class="glyphicon glyphicon-cog"></span></a>
        <ul>
            <li>
                <span>Skin</span>
                <ul class="colors" data-target="body" data-prefix="skin-">
                    <li class="active"><a class="blue" href="#"></a></li>
                    <li><a class="red" href="#"></a></li>
                    <li><a class="green" href="#"></a></li>
                    <li><a class="orange" href="#"></a></li>
                    <li><a class="yellow" href="#"></a></li>
                    <li><a class="pink" href="#"></a></li>
                    <li><a class="magenta" href="#"></a></li>
                    <li><a class="gray" href="#"></a></li>
                    <li><a class="black" href="#"></a></li>
                </ul>
            </li>
            <li>
                <span>Navbar</span>
                <ul class="colors" data-target="#navbar" data-prefix="navbar-">
                    <li class="active"><a class="blue" href="#"></a></li>
                    <li><a class="red" href="#"></a></li>
                    <li><a class="green" href="#"></a></li>
                    <li><a class="orange" href="#"></a></li>
                    <li><a class="yellow" href="#"></a></li>
                    <li><a class="pink" href="#"></a></li>
                    <li><a class="magenta" href="#"></a></li>
                    <li><a class="gray" href="#"></a></li>
                    <li><a class="black" href="#"></a></li>
                </ul>
            </li>
            <li>
                <span>Sidebar</span>
                <ul class="colors" data-target="#main-container" data-prefix="sidebar-">
                    <li class="active"><a class="blue" href="#"></a></li>
                    <li><a class="red" href="#"></a></li>
                    <li><a class="green" href="#"></a></li>
                    <li><a class="orange" href="#"></a></li>
                    <li><a class="yellow" href="#"></a></li>
                    <li><a class="pink" href="#"></a></li>
                    <li><a class="magenta" href="#"></a></li>
                    <li><a class="gray" href="#"></a></li>
                    <li><a class="black" href="#"></a></li>
                </ul>
            </li>
        </ul>
    </div>
    <!-- END Theme Setting -->
    <!-- BEGIN Navbar -->
    <div id="navbar" class="navbar navbar-fixed navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <!-- BEGIN Brand -->
                <a href="#" class="brand">
                    <small>
                        <i class="fa fa-desktop"></i>
                        Teacher
                    </small>
                </a>
                <!-- END Brand -->
                <!-- BEGIN Responsive Sidebar Collapse -->
                <a href="#" class="btn-navbar collapsed" data-toggle="collapse" data-target=".nav-collapse">
                    <i class="fa fa-reorder "></i>
                </a>
                <!-- END Responsive Sidebar Collapse -->
                <!-- BEGIN Navbar Buttons -->
                <ul class="nav flaty-nav pull-right">
                    <!-- END Button Messages -->
                    <!-- BEGIN Button User -->
                    <li class="user-profile">
                        <a data-toggle="dropdown" href="#" class="user-menu dropdown-toggle">
                            @{
                                if(Session["UserGender"]!=null && (int)Session["UserGender"]==0)
                                { 
                                    <img class="nav-user-photo" src="~/Content/img/demo/avatar/avatar2.jpg" alt="User">
                                }
                                else
                                {
                                    <img class="nav-user-photo" src="~/Content/img/demo/avatar/avatar1.jpg" alt="User">
                                }
                            }                            
                            <span class="hidden-phone" id="user_info">
                                Teacher
                            </span>
                            <i class="fa fa-caret-down"></i>
                        </a>

                        <!-- BEGIN User Dropdown -->
                        <ul class="dropdown-menu dropdown-navbar" id="user_menu">
                            <li>
                                <a href="/Home/Logout">
                                    <i class="fa fa-off"></i>
                                    Logout
                                </a>
                            </li>
                        </ul>
                        <!-- BEGIN User Dropdown -->
                    </li>
                    <!-- END Button User -->
                </ul>
                <!-- END Navbar Buttons -->
            </div><!--/.container-fluid-->
        </div><!--/.navbar-inner-->
    </div>
    <!-- END Navbar -->
    <!-- BEGIN Container -->
    <div class="container-fluid" id="main-container">
        <!-- BEGIN Sidebar -->
        <div id="sidebar" class="nav-collapse">
            <!-- BEGIN Navlist -->
            <ul class="nav nav-list scrollable">
                <!-- BEGIN Search Form -->
                <li class="marginT5 text-center">
                    <img src="~/Content/Al_Omam.png" />
                </li>
                <li>
                    <form target="#" method="GET" class="search-form">
                        <span class="search-pan">
                            <button type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                            <input type="text" name="search" placeholder="Search ..." autocomplete="off" />
                        </span>
                    </form>
                </li>
                <!-- END Search Form -->

                <li>
                    <i class="fa fa-dashboard"></i>
                    <span>Navigation</span>
                </li>

                <li>
                    <a href="/Teacher/">
                        <i class="fa fa-dashboard"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <li>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0)">
                        <i class="fa fa-bookmark"></i>
                        <span>Student Attendence</span>
                        <b class="arrow fa fa-angle-right"></b>
                    </a>
                    <ul class="submenu">
                        <li><a href="/Teacher/MarkAttendenceSelectDateClass">Mark Attendence</a></li>
                        <li><a href="/Teacher/ViewAttendenceSelectDateClass">View Attendence</a></li>
                        <li><a href="/Teacher/EditAttendenceSelectDateClass">Edit Attendence</a></li>
                    </ul>
                </li>
                <li>
                    <a href=@("/Teacher/TeachersResponsibilities/"+(int)Session["UserId"])>
                        <i class="fa fa-book"></i>
                        <span>Subjects</span>
                    </a>
                </li>
                <li>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0)">
                        <i class="fa fa-bookmark"></i>
                        <span>Leaves</span>
                        <b class="arrow fa fa-angle-right"></b>
                    </a>
                    <ul class="submenu">
                        <li><a href="/Teacher/RequestForLeave">Request Leave</a></li>
                        <li><a href="/Teacher/ShowAllLeaveRequests">View Leaves</a></li>
                    </ul>
                </li>
                <li>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0)">
                        <i class="fa fa-bookmark"></i>
                        <span>Student Attendance</span>
                        <b class="arrow fa fa-angle-right"></b>
                    </a>
                    <ul class="submenu">
                        <li><a href="/Teacher/MarkStudentAttendence">Mark Attendance</a></li>
                        <li><a href="/Teacher/ViewAttendenceSelectDateClass">View Attendance</a></li>
                    </ul>
                </li>
                @*<li>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0)">
                        <i class="fa fa-bookmark"></i>
                        <span>Grade Log</span>
                        <b class="arrow fa fa-angle-right"></b>
                    </a>
                    <ul class="submenu">
                        <li><a href="">Enter Marks</a></li>
                        <li><a href="">Subject Result</a></li>
                        <li><a href="">Class Result</a></li>
                    </ul>
                </li>*@
                <!-- END Main Content -->
            </ul>
        </div>
        <div id="main-content">
            @RenderSection("PageTitle", false)

            @if (ViewBag.Error != null)
            {
                <div class="container" style=" margin-top:20px;">
                    <div class="alert alert-info main-alert">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <div id="flash_info" class="text-danger">@ViewBag.Error.</div>
                    </div>
                </div>

            }

            @if (ViewBag.Message != null)
            {
                <div class="container" style=" margin-top:20px;">
                    <div class="alert alert-info main-alert">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <div id="flash_info" class="text-success">@ViewBag.Message .</div>
                    </div>
                </div>

            }
            @RenderBody()


        </div>
        <!-- END Content -->
    </div>
    <!-- END Container -->

    <footer>
        <p></p>
    </footer>

    <a id="btn-scrollup" class="btn btn-circle btn-large" href="#"><i class="fa fa-chevron-up"></i></a>


</body>
</html>

