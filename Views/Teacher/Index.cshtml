@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    //Layout = null;
    SchoolManagementSystem.Models.Employee teacher = ViewBag.Teacher;
    List<SchoolManagementSystem.Models.ClassSubjectTeacher> subjectsList = ViewBag.TeachersSubjects;
}

@section Scripts{

}
@section PageTitle{
    <div class="page-title">
        <h1>Welcome @teacher.FullName</h1>
    </div>
}
<div class="row-fluid">
    <div class="span5 offset1">
        <div class="box box-gray">
            <div class="box-title">
                @*<a class="btn btn-default" href=@("/Teacher/TeachersResponsibilities/"+Session["TeacherId"]) >All Subjects</a>
                    <a class="btn btn-default" href=@("/Teacher/RequestForLeave")>Request For Leave</a>
                    <a class="btn btn-default" href=@("/Teacher/MarkStudentAttendence")>Mark Student Attendence</a>*@
                <h3>Personal Information</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                </div>
            </div>

            <div class="box-content">
                <div class="row-fluid">
                    <div class="span3 offset1 text-label">ID</div>
                    <div class="span4 offset1 text">@teacher.Id</div>
                </div>
                <div class="row-fluid">
                    <div class="span3 offset1 text-label">Gender</div>
                    <div class="span4 offset1 text">@teacher.Gender</div>
                </div>
                <div class="row-fluid">
                    <div class="span3 offset1 text-label">Joining</div>
                    <div class="span4 offset1 text">@teacher.DateOfJoining</div>
                </div>
                <div class="row-fluid">
                    <div class="span3 offset1 text-label">Birthday</div>
                    <div class="span4 offset1 text">@teacher.DateOfBirth</div>
                </div>


            </div>
        </div>
    </div>
        <div class="span5">
            <div class="box box-black">
                <div class="box-title">
                    <h3>Contact Infromation</h3>
                    <div class="box-tool">
                        <a data-action="collapse" href="#"><i class="fa fa-chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <div class="row-fluid">
                        <div class="span3 text-label">Address</div>
                        <div class="span4 text">@teacher.Address1</div>
                    </div>
                    <div class="row-fluid">
                        <div class="span3 text-label">Home Phone</div>
                        <div class="span4 text">@teacher.HomePhone</div>
                    </div>
                    <div class="row-fluid">
                        <div class="span3 text-label">Mobile No</div>
                        <div class="span4 text">@teacher.MobileNumber</div>
                    </div>
                    <div class="row-fluid">
                        <div class="span3 text-label">Email</div>
                        <div class="span4 text">@teacher.Email</div>
                    </div>
                </div>
            </div>
        </div>
    
</div>

<div class="row-fluid">
    <div class="span10 offset1">
        <div class="box box-orange">
            <div class="box-title">
                <h3>Responsibilities</h3>
                <div class="box-tool">
                    <a data-action="collapse" href="#"><i class="fa fa-chevron-up" ></i></a>
                </div>
            </div>
            <div class="box-content nice-scroll" style="height:200px">
                <table class="table table-condensed table-hover">
                    <thead class="table-head">
                        <tr>
                            <th>#</th>
                            <th>Grade</th>
                            <th>Subject</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int i = 1;}
                        @foreach (var sub in subjectsList)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@sub.Class.ClassName </td>
                                <td>@sub.Subject.Name</td>
                            </tr>
                            { i++; }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @*<div class="span5">
            <div class="box">
                <div class="box-title">
                    <h3></h3>
                </div>
                <div class="box-content">

                </div>
            </div>
        </div>*@
</div>
