@{
    ViewBag.Title = "RequestForLeave";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

@section Scripts{
    <link rel="stylesheet" type="text/css" href="~/Content/assets/bootstrap-timepicker/compiled/timepicker.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/clockface/css/clockface.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets/bootstrap-datepicker/css/datepicker.css" />
    <script type="text/javascript" src="~/Content/assets/bootstrap-inputmask/bootstrap-inputmask.min.js"></script>
    <script type="text/javascript" src="~/Content/assets/bootstrap-timepicker/js/bootstrap-timepicker.js"></script>
    <script type="text/javascript" src="~/Content/assets/clockface/js/clockface.js"></script>
    <script type="text/javascript" src="~/Content/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script type="text/javascript" src="~/Content/assets/bootstrap-daterangepicker/date.js"></script>

}
@section PageTitle{
    <div class="page-title">
        <h1>Request Leave</h1>
    </div>
}
<div class="box">
    <div class="box-title">
        <h3>New Leave</h3>
    </div>
    <div class="box-content">
        <form action="RequestForLeave" method="post">
            <br />
            <div class="row-fluid">
                <div class="span6">
                    <label>Reason</label>
                    <input type="text" class="input-xlarge" name="Reason" required />
                </div>
            </div>
            <br />
            <div class="row-fluid">
                <div class="span12">
                    <label>Briefly Describe Reason</label>
                    <textarea name="Discription" class="input-block-level" rows="1"></textarea>
                </div>
            </div>
            <br />
            <div class="row-fluid">
                <div class="span6">
                    <label>Leave Start at</label>
                    <div class="input-prepend">
                        <span class="add-on fa fa-calendar"></span>
                        <input type="text" class="date-picker input-medium" name="LeaveStart" required />
                    </div>
                    <div class="input-prepend">
                        <span class="add-on fa fa-clock-o"></span>
                        <input type="text" id="clockface_1" data-format="hh:mm A" class="small clockface-open input-small" name="LeaveStartTime" required>
                    </div>
                </div>
                <div class="span6">
                    <label>Leave Ends at</label>
                    <div class="input-prepend">
                        <span class="add-on fa fa-calendar"></span>
                        <input type="text" class="date-picker input-medium" name="LeaveEnd" required />
                    </div>
                    <div class="input-prepend">
                        <span class="add-on fa fa-clock-o"></span>
                        <input type="text" id="clockface_2" data-format="hh:mm A" class="small clockface-open input-small" name="LeaveEndTime" required>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <input type="submit" class="btn btn-primary pull-right" value="Get Leave" />
            </div>
        </form>
    </div>
</div>
