@{
    ViewBag.Title = "EditAttendenceSelectDateClass";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    List<SelectListItem> clsList = ViewBag.classList;

}
@section Scripts{
    <link href="~/Content/assets/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
    <script src="~/Content/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
<script src="~/Content/assets/bootstrap-inputmask/bootstrap-inputmask.min.js"></script>

}
@section PageTitle{
    <div class="page-title">
        <h1>Edit Student Attendance</h1>
    </div>
}
<div class="box">
    <div class="box-title">
        <h3>Select Class and Date</h3>
    </div>
    <div class="box-content">
        <br /><br /><br />
        <form method="post" action="EditAttendenceSelectDateClass2">

            <div class="row-fluid">
                <div class="span4 offset1">
                    <label>Select Class</label>
                    @Html.DropDownList("ClassId", clsList, new { @class = "", required = "required" })
                </div>
                <div class="span4">
                    <label>Select Date</label>
                    <div class="controls">
                        <div class="input-append date date-picker" data-date="12-02-2012" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                            <input class="date-picker" size="16" type="text" name="Date" required><span class="add-on"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions ">
                <div class="row-fluid">
                    <input type="submit" class="btn btn-primary offset1 pull-right" value="Go To attedence" />
                </div>
            </div>
        </form>
    </div>
</div>

